@model IEnumerable<ApplicantDTO>

@{
    ViewData["Title"] = "Applicants";
}
<h1>Applicants</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<button class="btn btn-primary my-5" onclick="handleAdd()">Add Applicant</button>


<partial name="_CreationFormPartial" model="new ApplicantDTO()" />
@if (Model?.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().FamilyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().EmailAdress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CountryOfOrigin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Hired)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FamilyName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAdress)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Hired)
                    </td>


                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Edit</a> |


                 
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <i class="bi bi-trash3"></i> Delete
                            </button>
                           <form asp-action="Delete" asp-route-id="@item.Id">
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">@item.Name</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            are you sure you want to delete this Applicant
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </td>
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div>
        <h4 class="alert alert-warning">No Applicants</h4>
    </div>
}


<script>
    const handleAdd = () => {
        document.getElementById('addForm').style.display = 'block';
    }
</script>


<script>
    const handleSubmit = (e) => {

        e.target.submit();

    }
    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal?.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })
</script>


@section ValidationScripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}