@model ApplicantDTO
<form asp-action="create" id="addForm" style="display:none">
    <div class="form-group">
        <label>Applicant Name: </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="error"></span>
    </div>
    <div class="form-group">
        <label>Applicant Family Name: </label>
        <input asp-for="FamilyName" class="form-control" />
        <span asp-validation-for="FamilyName" class="error"></span>
    </div>
    <div>
        <label>EmailAdress: </label>
        <input asp-for="EmailAdress" class="form-control" />
        <span asp-validation-for="EmailAdress" class="error"></span>

    </div>
    <div>
        <label>Address: </label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="error"></span>

    </div>
    <div>
        <label>Country Of Origin: </label>
        <input asp-for="CountryOfOrigin" class="form-control" />
        <span asp-validation-for="CountryOfOrigin" class="error"></span>

    </div>
    <div>
        <label>Age: </label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="error"></span>

    </div>

    <div class="form-group">
        <label>Hired: </label>
        @Html.CheckBoxFor(model => model.Hired)
        <span asp-validation-for="Hired" class="error"></span>

    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <div class="btn btn-danger" onclick="document.getElementById('addForm').style.display='none'">Cnacel</div>
</form>